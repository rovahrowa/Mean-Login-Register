<%- include('partials/header') %>
<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<div class="form">
    <h2>Login</h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <% if(locals.success) { %>
        <div class="alert alert-success"><%= success %></div>
    <% } %>
    <div class="first-row">
        <a href="#"><img src="https://s13.postimg.org/r7a1xqv1j/1480623034_lock.png" alt="login" class="icon-login"></a>
        <h2 class="first-login">LOGIN</h2>
      </div>
    <form method="post">
        <div class="input-group">
          <span class="input-group-addon">
              <span class="fa fa-user fa-2x"></span>
            </span>
            <input type="text" class="form-control" name="username" placeholder="Username" id="username" value="<%= locals.username || '' %>" class="form-control" />
        </div>
         <div class="input-group">
           <span class="input-group-addon">
             <span class="fa fa-lock fa-2x"></span>
           </span>
            <input type="password" name="password" id="password" placeholder="Password" class="form-control" />
        </div>
        <div class="row">
          <div class="remember-me col-sm-6 col-xs-6">
            <label class="switch">
              <input type="checkbox">
              <div class="slider round"></div>
            </label>
            <p>Remember Me</p>
          </div>
          <div class="forget col-sm-6 col-xs-6">
            <a href="#">Forgot your password ?</a>
          </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg login-btn">Login</button>

        </div>

        <div class="social-login col-sm-6 col-sm-offset-3">

            <p class="sign-up">Not A Member ? <a href="/register">SIGN UP Now!</a></p>
        </div>

    </form>

<!--%- include('partials/footer') %>
